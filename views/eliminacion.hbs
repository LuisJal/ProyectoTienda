<html>
  <head>
    <title>Eliminación de artículos</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1>Eliminación de artículos</h1>
      <p>Seleccione el artículo que desea eliminar:</p>
      <table class="table">
        <thead>
          <tr>

            <th>Descripción</th>
            <th>Precio</th>
            <th>Eliminar</th>
          </tr>
        </thead>

        <tbody>
          {{#each articulos}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.descripcion}}</td>
              <td>{{this.precio}}</td>
              <td>
                <form action="/eliminacion/{{this._id}}" method="post">
                  <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
              </td>
            </tr>
          {{/each}}
        </tbody>

